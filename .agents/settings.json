{
  "extraKnownMarketplaces": {
    "local": {
      "source": {
        "source": "directory",
        "path": ".claude/marketplace"
      }
    }
  },
  "enabledPlugins": {
    "ts-lsp@local": true
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "task fmt",
            "timeout": 60,
            "statusMessage": "Formatting TypeScript and Svelte files..."
          }
        ]
      }
    ]
  }
}
